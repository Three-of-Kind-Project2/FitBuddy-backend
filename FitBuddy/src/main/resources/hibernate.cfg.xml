<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">password</property>
		<property name="hibernate.connection.url">jdbc:postgresql://training.cub6v59od0nw.us-east-1.rds.amazonaws.com:5432/jwa200810</property>
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.pool_size">10</property>
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">create</property>
		
		<!-- Configuration for annotation based mapping -->
		<!-- This is needed so that Hibernate knows where to look for the annotations -->
		<mapping class="com.revature.models.User"/>
		<mapping class="com.revature.models.Meal"/>
		<mapping class="com.revature.models.Food"/>
	</session-factory>
</hibernate-configuration>